---
import clsx from "clsx";
import { Grid } from "../Grid";
import { H1, H2 } from "../typography";
import { ArrowLink } from "./arrow-link";

interface Props {
  title: string;
  subTitle: string;
  className?: string;
  as?: string;
  cta?: string;
  ctaUrl?: string;
  nested?: boolean;
}

const { title, subTitle, className, as, cta, ctaUrl, nested } = Astro.props;
---

<Grid as={as} nested={nested}>
  <div
    class={clsx(
      "col-span-full flex flex-col space-y-10 lg:flex-row lg:items-end lg:justify-between lg:space-y-0 gap-4",
      className,
    )}>
    <div class="space-y-2">
      <H1>{title}</H1>
      <H2 variant="secondary" as="p">
        {subTitle}
      </H2>
    </div>

    {
      cta && ctaUrl ? (
        <ArrowLink client:load href={ctaUrl} direction="right">
          {cta}
        </ArrowLink>
      ) : null
    }
  </div>
</Grid>
