---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { H1, H2 } from "../typography";

interface Props {
  title: string;
  subtitle: string;
  imagePath: string;
}

const { title, subtitle, imagePath } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/images/slides/*.{jpeg,jpg,png,gif}",
);
if (!images[imagePath]) {
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/images/slides/*.{jpeg,jpg,png,gif}"`,
  );
}
---

<div class="h-hero10 w-full lg:h-hero12 lg:min-h-[41rem]">
  <div class="relative z-20 flex h-full flex-col justify-center md:mx-10vw">
    <div
      class="mx-auto mt-6 grid h-auto max-w-7xl grid-cols-4 gap-x-4 md:grid-cols-8 lg:relative lg:min-h-[40rem] lg:grid-cols-12 lg:gap-x-6">
      <div
        class="col-span-full lg:col-span-7 lg:col-start-1 lg:row-start-1 lg:flex lg:h-full lg:flex-col xl:col-span-5">
        <div
          class="relative block w-full rounded-lg bg-gray-100/70 px-8 py-10 md:px-16 md:py-20 dark:bg-gray-800/80">
          <div class="flex flex-auto flex-col gap-4 md:gap-10">
            <div>
              <H1>{title}</H1>
            </div>
            <div class="flex flex-col space-y-4">
              <H2 variant="secondary" as="p" className="text-gray-500">
                {subtitle}
              </H2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div
    class="absolute top-0 h-full w-full select-none overflow-hidden border-none bg-cover bg-center object-cover"
    data-swiper-parallax-x="50%">
    <Image
      src={images[imagePath]()}
      class="h-full w-full select-none border-none object-cover"
      widths={[800, 1200, 1800]}
      alt={subtitle}
    />
  </div>
</div>
